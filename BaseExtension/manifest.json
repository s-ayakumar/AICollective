{
    "manifest_version": 3,
    "name": "Chroma-Shift",
    "version": "1.0",
    "description": "A basic extension to change the background color of the current tab.",
    "action": {
    "default_popup": "popup.html"
    },
    "permissions": [
    "activeTab",
    "scripting"
    ],
    "host_permissions": [
    "<all_urls>"
    ]
}
